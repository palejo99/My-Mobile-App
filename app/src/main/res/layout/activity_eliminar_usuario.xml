<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.franciscovahos.crudpersona.Administrador.EliminarUsuario">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="524dp"
        android:background="@drawable/haruko"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtID"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtID"
            android:layout_marginTop="12dp"
            android:text="Phrase to be deleted"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtEliminar"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtID"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            android:background="@android:color/transparent"
            android:onClick="onClickEliminar"
            android:text="Borrar"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
